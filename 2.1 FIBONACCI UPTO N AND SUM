#include <stdio.h>
int main() {
    int n, i;
    printf("Name : V.Balaram Krishna\n");
    printf("Reg No : 192324049\n");
    printf("\nEnter the value of n: ");
    scanf("%d", &n);
    int fib[n + 1];
    fib[0] = 0;
    fib[1] = 1;
    for (i = 2; i <= n; i++) {
        fib[i] = fib[i - 1] + fib[i - 2];
    }
    printf("Fibonacci Series up to %d numbers:\n", n);
    for (i = 0; i <= n; i++) {
        printf("%d ", fib[i]);
    }
    int sum = 0;
    for (i = 0; i <= n; i++) {
        sum += fib[i];
    }
    printf("\nSum of Fibonacci Series up to %d numbers: %d\n", n, sum);
    return 0;
}

