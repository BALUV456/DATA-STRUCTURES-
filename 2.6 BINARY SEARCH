#include<iostream>
int main() {
	int mid,left=0,n,i,found=0;
	printf("Name : V.Balaram Krishna\n");
	printf("Reg No : 192324049\n");
	printf("\nEnter the Array size : ");
	scanf("%d",&n);
	int right = n-1;
	int a[n];
	printf("\nEnter Array Elements : ");
	for(i=0;i<n;i++) {
		scanf("%d",&a[i]);
	}
	int value;
	printf("\nEnter the Value you need to search : ");
	scanf("%d",&value);
	
	while(left<=right) {
		mid = (left+right)/2;
		if(value==a[mid]) {
			printf("Element found");
			found = 1;
			break;
		}
		else if(value<a[mid]) {
			right = mid-1;
		}
		else if(value>a[mid]) {
			left = mid+1;
		}
	}
	if(found==0)
	printf("Element not found");
	return 0;
}

